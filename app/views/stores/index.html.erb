<hr>
<div class="columns">
  <div class="column is-one-quarter">
    <%= render 'admin/nav' %>
  </div>
  <div class="column content-area">
    <nav class="pagination is-small is-centered">
      <ul class="pagination-list">
        <%= active_link_to '...', admin_stores_path, active: /stores$/, class: 'pagination-link', class_active: 'is-current' %>
        <% ('a'..'z').each do |alpha| %>
          <%= active_link_to alpha, admin_stores_path(alpha: alpha), active: /stores\?alpha=#{alpha}/, class: 'pagination-link', class_active: 'is-current' %>
        <% end %>
      </ul>
    </nav>

    <table class="table admin-data-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Postal Code</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name.titleize %></td>
          <td><%= store.postal_code %></td>
          <td>
            <%= link_to admin_store_path(store), method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>