<hr>
<div class="columns">
  <div class="column is-one-quarter">
    <%= render 'admin/nav' %>
  </div>
  <div class="column content-area">
    <% if @submissions.size > 0 %>
      <table class="table admin-data-table">
      <thead>
        <tr>
          <th width="40%">Name</th>
          <th class="10%">Postal Code</th>
          <th width="5%"></th>
          <th width="5%"></th>
        </tr>
      </thead>
      </table>

      <% @submissions.each do |submission| %>
        <%= form_for Store.new, url: admin_stores_path(Store.new) do |f| %>
        <table class="table admin-data-table">
        <tbody>
          <tr>
            <td width="40%">
              <input type="hidden" name="store[submission_id]" value="<%= submission.id %>" />
              <input name="store[name]" value="<%= submission.value.split(' - ').first %>" />
            </td>
            <td class="10%">
              <input name="store[postal_code]" value="<%= submission.value.split(' - ').last.match(/\d{5}(-\d{4})?/)[0] %>" />
            </td>
            <td width="5%">
              <a class='validate-link' href="#">
                <i class="material-icons hint--top" aria-label="Validate new store">check</i>
              </a>
            </td>
            <td width="5%">
              <%= link_to admin_submission_path(submission), method: :delete do %>
                <i class="material-icons hint--top" aria-label="Delete submission">delete</i>
              <% end %>
            </td>
          </tr>
        </tbody>
        </table>
        <% end %>
      <% end %>

      <%= paginate @submissions %>
    <% else %>
      <article class="notification is-success tile is-8 no-submission-alert">
        <i class="material-icons">check_circle</i>
        <p class="is-centered">No submissions to check!</p>
      </article>
    <% end %>
  </div>
</div>

<script>
  var page = new AdminSubmissionsPage();
</script>