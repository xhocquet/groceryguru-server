<!DOCTYPE html>
<html>
  <head>
    <title>Grocery Guru - Shop Smarter</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %> <%= yield :body_class %>">
    <div class="notification is-success <%= 'show' if (notice || flash[:notice]).present? %>">
      <button class="delete"></button>
      <%= notice || flash[:notice] %>
    </div>

    <div class="notification is-danger <%= 'show' if (alert || flash[:error]).present? %>">
      <button class="delete"></button>
      <%= alert || flash[:error] %>
    </div>

    <%= render 'application/navigation' %>
    <%= yield %>
    <%= render 'application/footer' %>
  </body>
</html>
